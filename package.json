{
  "name": "moely-wallpaper",
  "version": "1.0.0",
  "description": "萌哩 - PC端壁纸软件",
  "type": "module",
  "main": "src/main/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 --timeout 30000 --delay 2000 && electron .\"",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "build:react": "react-scripts build",
    "build": "npm run build:react && electron-builder",
    "dist": "npm run build:react && electron-builder --publish=never",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "wallpaper",
    "electron",
    "react"
  ],
  "author": "moely",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "wallpaper": "^7.2.1"
  },
  "build": {
    "appId": "link.moely.wallpaper",
    "productName": "萌哩壁纸",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/favicon.ico"
    },
    "mac": {
      "category": "public.app-category.photography",
      "icon": "icons/favicon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./"
}
